{
  "name": "janus-validator-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b packages/core packages/dsl packages/avro",
    "build:core": "tsc -b packages/core",
    "build:dsl": "tsc -b packages/dsl",
    "build:avro": "tsc -b packages/avro",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf packages/*/tsconfig.tsbuildinfo",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts'",
    "lint:fix": "eslint 'packages/*/src/**/*.ts' 'packages/*/tests/**/*.ts' --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "typescript": "^5.3.0"
  }
}
