{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..",
    "noEmit": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": ".."
  },
  "include": ["./**/*", "../src/**/*"],
  "exclude": ["node_modules"]
}

